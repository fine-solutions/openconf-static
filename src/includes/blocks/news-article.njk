{% from "blocks/tag-link.njk" import tag with context %}

{% macro news(parentClass, item) %}
  <article class="{{ parentClass }} news-article">
    <time class="news-article__date tag" datetime="{{ item.data.updated }}">
       {{ item.data.updated }}
    </time>
    <a class="news-article__text text" href="{{ item.filePathStem }}.html">
      {{ item.data.summary | safe }}
    </a>
    <div class="news-article__tag-list">
      {% for tg in item.data.tags %}
        {{ tag('news-article__tag', tg, true)}}
      {% endfor %}
    </div>
  </article>
{% endmacro %}
