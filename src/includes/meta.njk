<!-- 1. Title and Primary Meta -->

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>{{ documentTitle }}</title>

{% if themeColor %}
  <meta name="theme-color" media="(prefers-color-scheme: light)" content="{{ themeColor.light }}">
  <meta name="theme-color" media="(prefers-color-scheme: dark)" content="{{ themeColor.dark }}">
{% endif %}

<!-- 2. Preconnect -->
<!-- 3. Async inline script -->
<!-- 4. CSS with @import -->
<!-- 5. Synchronous JS -->
<!-- 6. CSS without @import -->

<link rel="stylesheet" href="/styles/index.css">
<link rel="stylesheet" href="/styles/dark-theme.css" media="(prefers-color-scheme: dark)">

<!-- 7. Preload -->

<link rel="preload" href="/fonts/Roboto/Roboto-Regular.woff2" as="font" type="font/woff2" crossorigin>
<link rel="preload" href="/fonts/Roboto/Roboto-SemiBold.woff2" as="font" type="font/woff2" crossorigin>
<link rel="preload" href="/fonts/RobotoMono/RobotoMono-Light.woff2" as="font" type="font/woff2" crossorigin>
<link rel="preload" href="/fonts/RobotoMono/RobotoMono-Regular.woff2" as="font" type="font/woff2" crossorigin>
<link rel="preload" href="/fonts/RobotoMono/RobotoMono-Bold.woff2" as="font" type="font/woff2" crossorigin>

<!-- 8. Defer inline script -->
<!-- 9. Prefetch/Prerender -->
<!-- 10. SEO/meta/icons/OS/etc. -->

<meta name="title" content="{{ documentTitle }}">

{% if documentDescription %}
  <meta name="description" content="{{ documentDescription }}">
{% endif %}

<meta name="robots" content="index, follow">
<meta name="color-scheme" content="light dark">

<link rel="icon" href="/favicon.ico">
<link rel="icon" href="/images/logo/maskable.svg" type="image/svg+xml">
<link rel="apple-touch-icon" href="/images/logo/180x180.png">
<link rel="canonical" href="{{ baseUrl }}{{ page.url }}">
<link rel="manifest" href="/manifest.json">

<!-- 10.1 Open Graph (and Facebook) -->

<meta property="og:url" content="{{ fullPageUrl }}">
<meta property="og:title" content="{{ documentTitle }}">

{% if documentDescription %}
  <meta property="og:description" content="{{ documentDescription }}">
  <meta itemprop="description" content="{{ documentDescription }}">
{% endif %}

{% if pageType == 'Article' %}
  <meta property="og:type" content="article">
{% else %}
  <meta property="og:type" content="website">
{% endif %}

<meta property="og:locale" content="ru_RU">

<!-- 10.2 Twitter -->

<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="{{ fullPageUrl }}">
<meta property="twitter:title" content="{{ documentTitle }}">

{% if documentDescription %}
  <meta property="twitter:description" content="{{ documentDescription }}">
{% endif %}
